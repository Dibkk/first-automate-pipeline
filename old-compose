name: sample-pipeline-project
version: '1.0'

services:
  backend: 
    build: .
    image: python-api
    container_name: python-api
    ports: 
      - "5000:5000"
  database:
    container_name: api-database
    image: mongo
    ports: 
      - "27017:27017"
    volumes:
      - mongo-data:/data/db
      - mongo-configdb:/data/configdb

volumes:
  mongo-data:
  mongo-configdb: 